{
  "name": "electron-discord-webapp",
  "productName": "Electron Discord WebApp",
  "version": "0.2.0-rc2",
  "description": "A Discord Web App based on the Electron Engine.",
  "main": "js/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
	"pack:out": "electron-builder --dir -c.directories.out",
    "dist": "electron-builder",
	"dist:linux": "electron-builder -l",
	"dist:linux-arm": "electron-builder -l tar.gz AppImage",
	"dist-armhost": "electron-builder --arm64 --armv7l --x64 --ia32 -l tar.gz AppImage"
  },
  "keywords": [
    "discord",
    "webapp",
    "electron"
  ],
  "author": {
    "name": "SpacingBat3",
    "email": "57194920+SpacingBat3@users.noreply.github.com",
    "url": "https://github.com/SpacingBat3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SpacingBat3/electron-discord-webapp"
  },
  "bugs": {
    "url": "https://github.com/SpacingBat3/electron-discord-webapp/issues"
  },
  "homepage": "https://github.com/SpacingBat3/electron-discord-webapp#readme",
  "build": {
    "appId": "com.spacingbat3.webapp-discord-electron",
    "icon": "icons/app.png",
    "artifactName":"${productName} (v${version}) [${platform}-${arch}].${ext}",
    "linux": {
      "target": [
        {
          "target": "tar.gz",
          "arch": ["ia32", "x64", "armv7l", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["ia32", "x64"]
        },
        {
          "target": "AppImage",
          "arch": ["ia32", "x64", "armv7l", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["ia32", "x64"]
        },
        {
          "target": "pacman",
          "arch": ["ia32", "x64"]
        }
      ],
      "desktop": {
        "Name": "Discord",
        "Icon": "discord",
        "Comment": "Electron Web App for Discord.",
        "Categories": [
          "Network",
          "discord",
          "electron",
          "web"
        ]
      },
      "category": "Network"
    },
    "extraResources": [
      {
        "from": "icons/app.png",
        "to": "app.png"
      }
    ],
    "extraFiles": [
      "LICENSE.md"
    ]
  },
  "devDependencies": {
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "electron-json-config": "^1.5.3"
  }
}
