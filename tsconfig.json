{ 
    "compilerOptions": {
        /* Whenever incremental compilation is enabled */
        "incremental": true,
        /* Location to the file containing saved information about incremental compilation */
        "tsBuildInfoFile": "sources/app/.build/info.json",
        /* Whenever strict type checking is enabled */
        "strict": true,
        /* The way of implementing module imports by TypeScript */
        "module": "commonjs",
        /* The way of resolving module names by TypeScript */
        "moduleResolution": "node",
        /* Whenever sourcemaps should be made for emitted JavaScript files */
        "sourceMap": true,
        /* Directory used to resolve non-relative module names */
        "baseUrl": ".",
        /* Directrory in which are placed all emitted files */
        "outDir": "sources/app",
        /* Whenever comments are emitted to files */
        "removeComments": true,
        /* Ignore errors in dependencies. */
        "skipLibCheck": true
    },
    "include": [
        /* Main process scripts */
        "sources/code/*.ts",
        /* Renderer process scripts */
        "sources/code/renderer/*.ts"
    ]
}